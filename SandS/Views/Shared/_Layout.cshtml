<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SandS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @*    <link rel="stylesheet" href="~/SandS.styles.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/animate.css/animate.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.11.5/datatables.min.css" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="~/Img/Logopng.png" alt="logo" style="height:50px" />
                <span class="fst-italic">SandS</span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="collapse navbar-collapse  d-md-flex justify-content-md-end" id="navbarNavDropdown">

                <ul class="navbar-nav ">
                    <li class="p-3">
                        <!-- Facebook -->
                        <a class="btn btn-primary" style="background-color: #3b5998;" href="#!" role="button">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                    </li>

                    <li class="p-3">
                        <!-- Twitter -->
                        <a class="btn btn-primary" style="background-color: #55acee;" href="#!" role="button">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </li>

                    <li class="p-3">
                        <!-- Google -->
                        <a class="btn btn-primary" style="background-color: #dd4b39;" href="#!" role="button">
                            <i class="fab fa-google"></i>
                        </a>
                    </li>

                    <li class="p-3">
                        <!-- Instagram -->
                        <a class="btn btn-primary" style="background-color: #ac2bac;" href="#!" role="button">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </li>

                    <li class="p-3">
                        <!-- Linkedin -->
                        <a class="btn btn-primary" style="background-color: #0082ca;" href="#!" role="button">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </li>

                    <li class="p-3">
                        <!-- Whatsapp -->
                        <a class="btn btn-primary" style="background-color: #25d366;" href="#!" role="button">
                            <i class="fab fa-whatsapp"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="page-header gradient">
        <div class="container pt-3">
            <div class="row align-items-center">
                <div class="col-md-5">
                    <h2>Laundry made easy</h2>
                    <p>We're one Click Away</p>
                    <partial name="_LoginPartial" />
                </div>
                <div class="col-md-5">
                    <img src="~/Img/sands-removebg.png" alt="contact" class="img-fluid" />
                </div>
            </div>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
            <path fill="#f5f5f5 "
                  fill-opacity="1"
                  d="M0,160L60,138.7C120,117,240,75,360,96C480,117,600,203,720,208C840,213,960,139,1080,112C1200,85,1320,107,1380,117.3L1440,128L1440,320L1380,320C1320,320,1200,320,1080,320C960,320,840,320,720,320C600,320,480,320,360,320C240,320,120,320,60,320L0,320Z"></path>
        </svg>
    </header>

    <section class="feature" style="background-color:whitesmoke">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <img src="~/Img/removed_Bg_2.png" alt="feature" class="img-fluid" />
                </div>
                <div class="col-md-6">
                    <h1 class="my-3 text-dark">Introduction to online Laundry</h1>
                    <p class="my-4 text-dark">
                        Set the new trends let us take care of your Laundry with style
                    </p>
                    <ul class="text-dark">
                        <li>We collect anywhere at your door steps</li>
                        <li>Add to your Basket with no stress </li>
                        <li>One click at your finger tips</li>

                    </ul>
                </div>

            </div>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg"
             viewBox="0 0 1440 260">
            <path fill="#fff"
                  fill-opacity="1"
                  d="M0,288L80,256C160,224,320,160,480,160C640,160,800,224,960,245.3C1120,267,1280,245,1360,234.7L1440,224L1440,320L1360,320C1280,320,1120,320,960,320C800,320,640,320,480,320C320,320,160,320,80,320L0,320Z"></path>
        </svg>
    </section>

    <section class="gallery">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <h1>Check out our work</h1>
                    <p>what goes down in the service</p>
                </div>
            </div>

            <div class="row my-3 g-3">
                <div class="col-md-4"><img src="~/Img/depositphotos_1.jpg" alt="galery-1" class="img-fluid" /></div>
                <div class="col-md-4"><img src="~/Img/depositphotos_1.jpg" alt="galery-2" class="img-fluid" /></div>
                <div class="col-md-4"><img src="~/Img/depositphotos_1.jpg" alt="galery-3" class="img-fluid" /></div>
            </div>

            <div class="row mt-5 justify-content-end">
                <div class="col-md-2 mb-3">
                    <button type="button" class="btn btn-warning btn-lg">
                        See all work
                    </button>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <!-- Footer -->
    <footer class="gradient text-center text-white">
        <!-- Grid container -->
        <div class="container p-4">
            <!-- Section: Form -->
            <section class="">
                <form action="">
                    <!--Grid row-->
                    <div class="row d-flex justify-content-center">
                        <!--Grid column-->
                        <div class="col-auto">
                            <p class="pt-2">
                                <strong>Sign up for our newsletter</strong>
                            </p>
                        </div>
                        <!--Grid column-->
                        <!--Grid column-->
                        <div class="col-md-5 col-12">
                            <!-- Email input -->
                            <div class="form-outline form-white mb-4">
                                <input type="email" id="form5Example21" class="form-control" />
                                <label class="form-label" for="form5Example21">Email address</label>
                            </div>
                        </div>
                        <!--Grid column-->
                        <!--Grid column-->
                        <div class="col-auto">
                            <!-- Submit button -->
                            <button type="submit" class="btn btn-outline-light mb-4">
                                Subscribe
                            </button>
                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->
                </form>
            </section>
            <!-- Section: Form -->
            <!-- Section: Links -->
            <section class="">
                <!--Grid row-->
                <div class="row">
                    <!--Grid column-->
                    <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                        <h5 class="text-uppercase fw-bold mb-4">
                            <i class="fas fa-gem me-3"></i>S&S Laundry
                        </h5>
                        <p class="text-center">
                            Here you can use rows and columns to organize your footer content. Lorem ipsum
                            dolor sit amet, consectetur adipisicing elit.
                        </p>
                    </div>

                    <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                        <h5 class="text-uppercase">Contact</h5>
        
                        <p><i class="fas fa-home me-3"></i> Mamelodi Nellmaphuis</p>
                        <p><i class="fas fa-envelope me-3"></i>info@example.com</p>
                        <p><i class="fas fa-phone me-3"></i> + 01 234 567 88</p>
                    </div>
                </div>
            </section>
        </div>
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.09);">
            <span>&copy; 2022 - S&S - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></span>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->

    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.11.5/datatables.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/lib/bootbox.js/bootbox.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await Html.PartialAsync("_notificationPartial")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
