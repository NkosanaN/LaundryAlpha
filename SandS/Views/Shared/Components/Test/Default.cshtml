@model Model.Debtors;
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Microsoft.Extensions.Options;
@using S_and_S
@inject IStringLocalizer<SharedResource> Localizer
@inject IOptions<Service.StripeSettings> Stripe

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static"
            data-bs-keyboard="false" tabindex="-1"
            aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-dark text-center" id="exampleModalLabel">@ViewBag.Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="@Model.FirstName" class="form-label"></label>
                        <input asp-for="@Model.FirstName" type="text" class="form-control" id="inputName">
                    </div>
                    <div class="col-md-6">
                        <label asp-for="@Model.LastName" class="form-label"></label>
                        <input asp-for="@Model.LastName" type="text" class="form-control" id="Surname">
                    </div>


                    <div class="col-md-6">
                        <label asp-for="@Model.Catergory" class="control-label"></label>
                        @*<select asp-for="@Model.Catergory" id="Catergory" class="form-control" asp-items="@(SelectList)ViewBag.sList">
                            <option disabled selected>-select-</option>
                        </select>*@
                        <span asp-validation-for="@Model.Catergory" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mt-2">
                        <label asp-for="@Model.Email" class="form-label"></label>
                        <input asp-for="@Model.Email" type="email" class="form-control" id="inputEmail">
                    </div>

                    <div class="col-md-6">
                        <label asp-for="@Model.MobilePhoneNumber" class="form-label"></label>
                        <input asp-for="@Model.MobilePhoneNumber" type="text" class="form-control" id="MobilePhoneNumber">
                    </div>

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="isCollection" asp-for="@Model.isCollected">
                        <label id="isCollection" class="form-check-label" asp-for="@Model.isCollected"></label>
                    </div>

                    <div class="Address d-none row col-md-12">
                        <div class="col-md-6">
                            <label asp-for="@Model.StreetAddress1" class="form-label"></label>
                            <input asp-for="@Model.StreetAddress1" type="text" class="form-control" placeholder="1234 Mamelodi St" id="inputAddress">
                        </div>
                    </div>


                    <div class="accordion accordion-flush" id="accordionFlushExample">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="flush-headingOne">
                                <button class="accordion-button collapsed alert-primary" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                                    Accordion Item #1
                                </button>
                            </h2>
                            <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne"
                                 data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body">
                                    <table class="table table-hover d-none display" id="tblLaundry">
                                        @*                   <table class="table table-hover border-primary d-none display" id="tblLaundry">*@
                                        <thead>
                                            <tr>
                                                <th scope="col"></th>
                                                <th scope="col">Items</th>
                                                <th scope="col" style='text-align: center'>Prices (Rands)</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (var item in (List<Model.Product>)ViewBag.Laundry)
                                            {
                                                <tr>
                                                    <th scope="row"><input type="checkbox" name="row-check" id="5" style="width:25px;height:20px" /></th>
                                                    <td>@item.ProductName</td>
                                                    <td style="text-align: right">@item.ListPrice.ToString("N2")</td>
                                                </tr>
                                            }
                                        </tbody>

                                        <tfoot>
                                            <tr class="alert-primary text-dark ">
                                                <th class="col"> Total </th>
                                                <td class="col"></td>
                                                <th class="col font-weight-bold" id="totall" style='text-align: right'>0.00</th>
                                            </tr>
                                        </tfoot>
                                    </table>

                                    <table class="table table-hover d-none display" id="tblBedding">
                                        <thead>
                                            <tr>
                                                <th scope="col"></th>
                                                <th scope="col">Items</th>
                                                <th scope="col" style='text-align: center'>Prices (Rands)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in (List<Model.Product>)ViewBag.HouseHolds)
                                            {
                                                <tr>
                                                    <th scope="row"><input type="checkbox" name="row-check" id="6" style="width:25px;height:20px" /></th>
                                                    <td>@item.ProductName</td>
                                                    <td style="text-align: right">@item.ListPrice.ToString("N2")</td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr class="alert-primary text-dark">
                                                <th class="col"> Total </th>
                                                <td class="col"></td>
                                                <th class="col font-weight-bold" id="totalb" style='text-align: right'>0.00</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="modal-footer mt-1">
                       <button
                            data-bs-target="#adminModalToggle"
                            data-bs-toggle="modal"
                            id="adminviewsummary"
                            data-bs-dismiss="modal"
                            class="btn btn-primary">
                            View Summary
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>