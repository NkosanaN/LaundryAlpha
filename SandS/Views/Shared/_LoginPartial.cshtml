    @inject SignInManager<Model.ApplicationUser> SignInManager
@inject UserManager<Model.ApplicationUser> UserManager


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link">Logout</button>
            </form>
        </li>
    }
    else
    {



        <li class="nav-item">
                @*<a class="btn btn-outline-warning btn-lg  p-3 m-2" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
               <a class="btn btn-outline-secondary btn-lg p-3" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>*@
                <a class="text-white btn btn-outline-secondary btn-lg  p-3 m-2" asp-area="Identity" asp-page="/Account/Login" data-bs-toggle="modal" data-bs-target="#UserLoginModal"><i class="fas fa-sign-in-alt mr-1 p-1 text-white"></i>Login</a>
               <a class="text-white btn btn-outline-secondary btn-lg p-3" asp-area="Identity" asp-page="/Account/Register" data-bs-toggle="modal" data-bs-target="#UserRegistrationModal"><i class="fas fa-user mr-1 p-1 text-white"></i>Register</a>

      
        </li>
    }
</ul>
